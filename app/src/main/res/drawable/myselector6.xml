<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#EC7FFF" />
            <stroke android:width="3dp" android:color="#9C27B0" />
            <corners android:radius="30dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="45" android:endColor="#E447FF" android:startColor="#FADDFF" />
            <stroke android:width="3dp" android:color="#EC7EFF" />
            <corners android:radius="20dp" />

        </shape>
    </item>
</selector>