<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/serie_note"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context=".series.Serie_note">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleView"
                style="@style/Title"
                android:gravity="center"
                android:text="@string/serie_note_title" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ2"
                style="@style/CircleImage_series2"
                android:layout_below="@+id/titleView"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp" />

            <TextView
                android:id="@+id/tv2"
                style="@style/SeriesTextView3"
                android:layout_below="@+id/civ2"
                android:layout_alignStart="@+id/civ2"
                android:layout_alignEnd="@+id/civ2"
                android:layout_marginStart="-15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="-15dp"
                android:text="@string/phones_note20ultra" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ3"
                style="@style/CircleImage_series2"
                android:layout_below="@+id/titleView"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/tv3"
                style="@style/SeriesTextView3"
                android:layout_below="@+id/civ3"
                android:layout_alignStart="@+id/civ3"
                android:layout_alignEnd="@+id/civ3"
                android:layout_marginStart="-15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="-15dp"
                android:text="@string/phones_note20" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv1"
                style="@style/SuggestCardView"
                android:layout_below="@+id/tv2"
                android:layout_marginHorizontal="15dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tx9"
                        style="@style/Suggesttv1"
                        android:layout_alignParentRight="true"
                        android:text="@string/title_suggest" />

                    <TextView
                        android:id="@+id/tx10"
                        style="@style/Suggesttv2"
                        android:layout_below="@+id/tx9"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/serie_note_s1" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>