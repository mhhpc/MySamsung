<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/zfold4_full"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    tools:context=".phones_detail.full.Ph_zfold4_full">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/titleView1"
                style="@style/Title2"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/corner_ph1"
                android:text="مشخصات کامل" />

            <TextView
                android:id="@+id/titleView2"
                style="@style/Title2"
                android:layout_below="@id/titleView1"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/corner_ph2"
                android:text="@string/phones_zfold4" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="15dp"
                android:backgroundTint="#00BA08"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="5dp"
                android:layout_below="@id/titleView2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/t1"
                        style="@style/PhoneTextView3"
                        android:text="عرضه" />

                    <TextView
                        android:id="@+id/tv1_1"
                        style="@style/PhoneTextView4"
                        android:layout_below="@+id/t1"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="3dp"
                        android:text="معرفی" />

                    <TextView
                        android:id="@+id/tvv1_1"
                        style="@style/PhoneTextView5"
                        android:layout_below="@+id/t1"
                        android:layout_toStartOf="@+id/tv2_1"
                        android:text="10 آگست 2022" />

                    <TextView
                        android:id="@+id/tv2_1"
                        style="@style/PhoneTextView4"
                        android:layout_below="@+id/tvv1_1"
                        android:text="وضعیت" />

                    <TextView
                        android:id="@+id/tvv2_1"
                        style="@style/PhoneTextView5"
                        android:layout_below="@+id/tvv1_1"
                        android:layout_toStartOf="@+id/tv2_1"
                        android:text="عرضه در 27 آگست 2022" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="15dp"
                android:backgroundTint="#E237FF"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="5dp"
                android:layout_below="@id/cv1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/t2"
                        style="@style/PhoneTextView3"
                        android:text="بدنه" />

                    <TextView
                        android:id="@+id/tv1_2"
                        style="@style/PhoneTextView4"
                        android:layout_below="@+id/t2"
                        android:text="ابعاد" />

                    <TextView
                        android:id="@+id/tvv1_2"
                        style="@style/PhoneTextView6"
                        android:layout_below="@+id/t2"
                        android:layout_marginHorizontal="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_toStartOf="@+id/tv4_2"
                        android:text="155.1 در 130.1 در 6.3 میلی‌متر (در حالت باز)" />

                    <TextView
                        android:id="@+id/tvv2_2"
                        style="@style/PhoneTextView6"
                        android:layout_below="@+id/tvv1_2"
                        android:layout_marginHorizontal="3dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="3dp"
                        android:layout_toStartOf="@+id/tv4_2"
                        android:text="155.1 در 67.1 در 15.8 میلی‌متر (تا شده)" />

                    <TextView
                        android:id="@+id/tv2_2"
                        style="@style/PhoneTextView4"
                        android:layout_below="@+id/tvv2_2"
                        android:text="وزن" />

                    <TextView
                        android:id="@+id/tvv3_2"
                        style="@style/PhoneTextView5"
                        android:layout_below="@+id/tvv2_2"
                        android:layout_toStartOf="@+id/tv4_2"
                        android:text="263 گرم" />

                    <TextView
                        android:id="@+id/tv3_2"
                        style="@style/PhoneTextView4"
                        android:layout_below="@+id/tvv3_2"
                        android:text="ساخت" />

                    <TextView
                        android:id="@+id/tvv4_2"
                        style="@style/PhoneTextView6"
                        android:layout_below="@+id/tvv3_2"
                        android:layout_marginHorizontal="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_toStartOf="@+id/tv4_2"
                        android:text="جلوی شیشه‌ای (گوریلا گلس +Victus) (تا شده)، جلوی پلاستیکی (در حالت باز)، پشت شیشه‌ای (گوریلا گلس +Victus)، فریم آلومینیومی" />

                    <TextView
                        android:id="@+id/tvv5_2"
                        style="@style/PhoneTextView6"
                        android:layout_below="@+id/tvv4_2"
                        android:layout_marginHorizontal="3dp"
                        android:layout_marginTop="1dp"
                        android:layout_toStartOf="@+id/tv4_2"
                        android:text="گواهی IPX8 برای مقاوت در برابر نفوذ آب (تا 1.5 متر برای 30 دقیقه)" />

                    <TextView
                        android:id="@+id/tvv6_2"
                        style="@style/PhoneTextView6"
                        android:layout_below="@+id/tvv5_2"
                        android:layout_marginHorizontal="3dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="3dp"
                        android:layout_toStartOf="@+id/tv4_2"
                        android:text="قلم استایلوس" />

                    <TextView
                        android:id="@+id/tv4_2"
                        style="@style/PhoneTextView4"
                        android:layout_below="@+id/tvv6_2"
                        android:text="سیم‌کارت" />

                    <TextView
                        android:id="@+id/tvv7_2"
                        style="@style/PhoneTextView5"
                        android:layout_below="@+id/tvv6_2"
                        android:layout_toStartOf="@+id/tv4_2"
                        android:text="تا دو عدد نانو-سیم و یک eSIM" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="15dp"
                android:backgroundTint="#2BA1FF"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="5dp"
                android:layout_below="@id/cv2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/t3"
                        style="@style/PhoneTextView3"
                        android:text="نمایشگر" />

                    <TextView
                        android:id="@+id/tv1_3"
                        style="@style/PhoneTextView4"
                        android:layout_below="@+id/t3"
                        android:text="نوع" />

                    <TextView
                        android:id="@+id/tvv1_3"
                        style="@style/PhoneTextView5"
                        android:layout_below="@+id/t3"
                        android:layout_toStartOf="@+id/tv3_3"
                        android:text="Dynamic AMOLED 2X" />

                    <TextView
                        android:id="@+id/tv2_3"
                        style="@style/PhoneTextView4"
                        android:layout_below="@+id/tvv1_3"
                        android:text="ابعاد" />

                    <TextView
                        android:id="@+id/tvv2_3"
                        style="@style/PhoneTextView6"
                        android:layout_below="@+id/tvv1_3"
                        android:layout_marginHorizontal="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_toStartOf="@+id/tv3_3"
                        android:text="در حالت باز: 7.6 اینچ، 183.2 سانتی متر مربع (~90.9% نسبت صفحه نمایش به بدنه)" />

                    <TextView
                        android:id="@+id/tvv3_3"
                        style="@style/PhoneTextView6"
                        android:layout_below="@+id/tvv2_3"
                        android:layout_marginHorizontal="3dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="3dp"
                        android:layout_toStartOf="@+id/tv3_3"
                        android:text=" تا شده: 6.2 اینچ" />

                    <TextView
                        android:id="@+id/tv3_3"
                        style="@style/PhoneTextView4"
                        android:layout_below="@+id/tvv3_3"
                        android:text="رزولوشن" />

                    <TextView
                        android:id="@+id/tvv4_3"
                        style="@style/PhoneTextView6"
                        android:layout_below="@+id/tvv3_3"
                        android:layout_marginHorizontal="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_toStartOf="@+id/tv3_3"
                        android:text="در حالت باز: 1812 در 2176 پیکسل، 21.6:18 (~373 پیکسل در اینچ تراکم پیکسلی)" />

                    <TextView
                        android:id="@+id/tvv5_3"
                        style="@style/PhoneTextView6"
                        android:layout_below="@+id/tvv4_3"
                        android:layout_marginHorizontal="3dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="3dp"
                        android:layout_toStartOf="@+id/tv3_3"
                        android:text="تا شده: 904 در 2316 پیکسل، 23.1:9" />

                    <TextView
                        android:id="@+id/tv4_3"
                        style="@style/PhoneTextView4"
                        android:layout_below="@+id/tvv5_3"
                        android:text="محافظ" />

                    <TextView
                        android:id="@+id/tvv6_3"
                        style="@style/PhoneTextView5"
                        android:layout_below="@+id/tvv5_3"
                        android:layout_toStartOf="@+id/tv3_3"
                        android:text="کورنینگ گوریلا گلس +Victus" />

                    <TextView
                        android:id="@+id/tv5_3"
                        style="@style/PhoneTextView4"
                        android:layout_below="@+id/tvv6_3"
                        android:text="امکانات" />

                    <TextView
                        android:id="@+id/tvv7_3"
                        style="@style/PhoneTextView6"
                        android:layout_below="@+id/tvv6_3"
                        android:layout_marginHorizontal="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_toStartOf="@+id/tv3_3"
                        android:text="پشتیبانی از +HDR10" />

                    <TextView
                        android:id="@+id/tvv8_3"
                        style="@style/PhoneTextView6"
                        android:layout_marginTop="1dp"
                        android:layout_marginHorizontal="3dp"
                        android:layout_below="@+id/tvv7_3"
                        android:layout_toStartOf="@+id/tv3_3"
                        android:text="حداکثر روشنایی 1200 نیت" />

                    <TextView
                        android:id="@+id/tvv9_3"
                        style="@style/PhoneTextView6"
                        android:layout_marginHorizontal="3dp"
                        android:layout_marginTop="1dp"
                        android:layout_below="@+id/tvv8_3"
                        android:layout_toStartOf="@+id/tv3_3"
                        android:text="نرخ نوسازی تصویر در حالت باز 1 تا 120 هرتز" />

                    <TextView
                        android:id="@+id/tvv10_3"
                        style="@style/PhoneTextView6"
                        android:layout_below="@+id/tvv9_3"
                        android:layout_marginHorizontal="3dp"
                        android:layout_marginTop="1dp"
                        android:layout_toStartOf="@+id/tv3_3"
                        android:text="نرخ نوسازی تصویر در حالت تا شده 48 تا 120 هرتز" />

                    <TextView
                        android:id="@+id/tvv11_3"
                        style="@style/PhoneTextView6"
                        android:layout_below="@+id/tvv10_3"
                        android:layout_marginHorizontal="3dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="3dp"
                        android:layout_toStartOf="@+id/tv3_3"
                        android:text="قابل تا شدن از وسط" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="15dp"
                android:backgroundTint="#FF5891"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="5dp"
                android:layout_below="@id/cv3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/t4"
                        style="@style/PhoneTextView3"
                        android:text="پلتفرم" />

                    <TextView
                        android:id="@+id/tv1_4"
                        style="@style/PhoneTextView4"
                        android:layout_below="@+id/t4"
                        android:text="سیستم‌عامل" />

                    <TextView
                        android:id="@+id/tvv1_4"
                        style="@style/PhoneTextView5"
                        android:layout_below="@+id/t4"
                        android:layout_toStartOf="@+id/tv4_4"
                        android:text="در زمان عرضه اندروید 12L و One UI 4.1.1" />

                    <TextView
                        android:id="@+id/tv2_4"
                        style="@style/PhoneTextView4"
                        android:layout_below="@+id/tvv1_4"
                        android:text="تراشه" />

                    <TextView
                        android:id="@+id/tvv2_4"
                        style="@style/PhoneTextView5"
                        android:layout_below="@+id/tvv1_4"
                        android:layout_toStartOf="@+id/tv4_4"
                        android:text="Qualcomm SM8475 Snapdragon 8+ Gen 1 (چهار نانومتر)" />

                    <TextView
                        android:id="@+id/tv3_4"
                        style="@style/PhoneTextView4"
                        android:layout_below="@+id/tvv2_4"
                        android:text="پردازنده‌مرکزی" />

                    <TextView
                        android:id="@+id/tvv3_4"
                        style="@style/PhoneTextView5"
                        android:layout_below="@+id/tvv2_4"
                        android:layout_toStartOf="@+id/tv4_4"
                        android:text="8 هسته‌ای (یک هسته‌ی 3.19 گیگاهرتز Cortex-X2 و سه هسته‌ی 2.75 گیگاهرتز Cortex-A710 و چهار هسته‌ی 1.80 گیگاهرتز Cortex-A510)" />

                    <TextView
                        android:id="@+id/tv4_4"
                        style="@style/PhoneTextView4"
                        android:layout_below="@+id/tvv3_4"
                        android:text="پردازنده‌گرافیکی" />

                    <TextView
                        android:id="@+id/tvv4_4"
                        style="@style/PhoneTextView5"
                        android:layout_below="@+id/tvv3_4"
                        android:layout_toStartOf="@+id/tv4_4"
                        android:text="Adreno 730" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="15dp"
                android:backgroundTint="#8D4DFF"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="5dp"
                android:layout_below="@id/cv4">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/t5"
                        style="@style/PhoneTextView3"
                        android:text="حافظه" />

                    <TextView
                        android:id="@+id/tv1_5"
                        style="@style/PhoneTextView4"
                        android:layout_below="@+id/t5"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="3dp"
                        android:text="درگاه‌حافظه" />

                    <TextView
                        android:id="@+id/tvv1_5"
                        style="@style/PhoneTextView5"
                        android:layout_below="@+id/t5"
                        android:layout_toStartOf="@+id/tv2_5"
                        android:text="خیر" />

                    <TextView
                        android:id="@+id/tv2_5"
                        style="@style/PhoneTextView4"
                        android:layout_below="@+id/tvv1_5"
                        android:text="حافظه‌داخلی" />

                    <TextView
                        android:id="@+id/tvv2_5"
                        style="@style/PhoneTextView6"
                        android:layout_marginHorizontal="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_below="@+id/tvv1_5"
                        android:layout_toStartOf="@+id/tv2_5"
                        android:text="256 گیگابایت با 12 گیگابایت رم، 512 گیگابایت با 12 گیگابایت رم، 1 ترابایت با 12 گیگابایت رم" />

                    <TextView
                        android:id="@+id/tvv3_5"
                        style="@style/PhoneTextView6"
                        android:layout_marginHorizontal="3dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="3dp"
                        android:layout_below="@+id/tvv2_5"
                        android:layout_toStartOf="@+id/tv2_5"
                        android:text="UFS 3.1" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>