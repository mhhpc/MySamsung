<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ph_zfold3_customize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    tools:context=".phones_detail.customize.galaxy_z.Ph_zfold3_customize">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/view"
                style="@style/RelativeView">

                <io.github.florent37.shapeofview.shapes.DiagonalView
                    android:id="@+id/v1"
                    style="@style/PhoneCustomizeArcview"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/iv1"
                        style="@style/PhoneFullIamge"
                        android:src="@drawable/ic_launcher_background" />


                </io.github.florent37.shapeofview.shapes.DiagonalView>

                <io.github.florent37.shapeofview.shapes.CircleView
                    android:id="@+id/circle"
                    style="@style/PhoneCustomizeCircleimage"
                    android:layout_below="@+id/v1"
                    android:layout_marginTop="-50dp"
                    android:layout_marginBottom="3dp">

                    <ImageView
                        android:id="@+id/iv2"
                        style="@style/PhoneFullIamge"
                        android:src="@drawable/phone" />

                </io.github.florent37.shapeofview.shapes.CircleView>

            </RelativeLayout>

            <TextView
                android:id="@+id/titleView1"
                style="@style/Title2"
                android:layout_below="@+id/view"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/corner_customize1"
                android:text="@string/phones_customize_title" />

            <TextView
                android:id="@+id/titleView2"
                style="@style/Title2"
                android:layout_below="@id/titleView1"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/corner_customize2"
                android:text="@string/phones_zfold3" />

            <TextView
                android:id="@+id/ct1"
                style="@style/Customize_text"
                android:layout_below="@+id/titleView2"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/corner_ph_customize"
                android:text="@string/phones_customize_t1" />

            <TextView
                android:id="@+id/ctv1"
                style="@style/TipsTitleTextView2"
                android:layout_below="@id/ct1"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/phones_customize_tv1" />

            <TextView
                android:id="@+id/ctv2"
                style="@style/TipsTitleTextView2"
                android:layout_below="@id/ctv1"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/phones_customize_tv2" />

            <Button
                android:id="@+id/bt1"
                style="@style/MyButton6"
                android:layout_below="@+id/ctv2"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/background"
                android:text="@string/phones_customize_b1" />

            <LinearLayout
                android:id="@+id/ll1"
                style="@style/TipsLinearLayout"
                android:layout_below="@+id/bt1"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv1"
                    style="@style/TipsCardView"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/image1"
                        style="@style/TipsImageView" />

                    <TextView
                        style="@style/TipsTextView"
                        android:text="@string/phones_customize_cv1" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv2"
                    style="@style/TipsCardView"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/image1_1"
                        style="@style/TipsImageView" />

                    <TextView
                        style="@style/TipsTextView"
                        android:text="@string/phones_customize_cv1_1" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <Button
                android:id="@+id/bt2"
                style="@style/MyButton6"
                android:layout_below="@+id/ll1"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:drawableRight="@drawable/shotcut"
                android:text="@string/phones_customize_b2" />

            <TextView
                android:id="@+id/ct2"
                style="@style/Customize_text"
                android:layout_below="@+id/bt2"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/corner_ph_customize"
                android:text="@string/phones_customize_t2" />

            <LinearLayout
                android:id="@+id/ll2"
                style="@style/TipsLinearLayout"
                android:layout_below="@+id/ct2"
                android:layout_marginHorizontal="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv3"
                    style="@style/TipsCardView2"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/image2"
                        style="@style/TipsImageView" />

                    <TextView
                        style="@style/TipsTextView"
                        android:text="@string/phones_customize_over2021" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <Button
                android:id="@+id/bt3"
                style="@style/MyButton6"
                android:layout_below="@+id/ll2"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:drawableLeft="@drawable/music"
                android:text="@string/phones_customize_b3" />


        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>