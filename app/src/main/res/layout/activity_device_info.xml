<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.Device_info_activity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ctr_bg">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            style="@style/AppbarTitle2">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                style="@style/CollapsingToolbarLayout2"
                app:title="@string/device_info_title">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    style="@style/Toolbar" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/device_info"
            style="@style/NestedScrollView">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv1"
                    style="@style/SimpleTextview"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/device_info_t1" />

                <TextView
                    android:id="@+id/tv2"
                    style="@style/SimpleTextview"
                    android:layout_below="@id/tv1"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/device_info_t2" />

                <TextView
                    android:id="@+id/tt1"
                    style="@style/Customize_text"
                    android:layout_below="@+id/tv2"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner_app_title"
                    android:text="@string/device_info_tt1" />

                <TextView
                    android:id="@+id/tv3"
                    style="@style/SimpleTextview"
                    android:layout_below="@id/tt1"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/device_info_t3" />

                <Button
                    android:id="@+id/bt1"
                    style="@style/MyButton6"
                    android:layout_below="@+id/tv3"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/device_info_b1" />


                <ImageView
                    android:id="@+id/imv1"
                    style="@style/PhoneImageView2"
                    android:layout_below="@id/bt1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/tv4"
                    style="@style/SimpleTextview"
                    android:layout_below="@id/imv1"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/device_info_t4" />

                <TextView
                    android:id="@+id/tv5"
                    style="@style/SimpleTextview"
                    android:layout_below="@id/tv4"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/device_info_t5" />

                <TextView
                    android:id="@+id/tv6"
                    style="@style/SimpleTextview"
                    android:layout_below="@id/tv5"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/device_info_t6" />

                <TextView
                    android:id="@+id/tv7"
                    style="@style/SimpleTextview"
                    android:layout_below="@id/tv6"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/device_info_t7" />

                <TextView
                    android:id="@+id/tv8"
                    style="@style/SimpleTextview"
                    android:layout_below="@id/tv7"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/device_info_t8" />

                <TextView
                    android:id="@+id/tv9"
                    style="@style/SimpleTextview"
                    android:layout_below="@id/tv8"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/device_info_t9" />

                <TextView
                    android:id="@+id/tv10"
                    style="@style/SimpleTextview"
                    android:layout_below="@id/tv9"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/device_info_t10" />

                <TextView
                    android:id="@+id/tv11"
                    style="@style/SimpleTextview"
                    android:layout_below="@id/tv10"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/device_info_t11" />

                <TextView
                    android:id="@+id/tv12"
                    style="@style/SimpleTextview"
                    android:layout_below="@id/tv11"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/device_info_t12" />

                <TextView
                    android:id="@+id/tv13"
                    style="@style/SimpleTextview"
                    android:layout_below="@id/tv12"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/device_info_t13" />

                <TextView
                    android:id="@+id/tt2"
                    style="@style/Customize_text"
                    android:layout_below="@+id/tv13"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner_app_title"
                    android:text="@string/device_info_tt2" />

                <TextView
                    android:id="@+id/tv14"
                    style="@style/SimpleTextview"
                    android:layout_below="@id/tt2"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/device_info_t14" />

                <Button
                    android:id="@+id/bt2"
                    style="@style/MyButton6"
                    android:layout_below="@+id/tv14"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/device_info_b1" />

                <TextView
                    android:id="@+id/tt3"
                    style="@style/Customize_text"
                    android:layout_below="@+id/bt2"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner_app_title"
                    android:text="@string/device_info_tt3" />

                <TextView
                    android:id="@+id/tv15"
                    style="@style/SimpleTextview"
                    android:layout_below="@id/tt3"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/device_info_t15" />

                <TextView
                    android:id="@+id/tvi"
                    style="@style/SimpleTextview"
                    android:layout_below="@id/tv15"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/device_info_title"
                    android:textSize="20sp" />

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>