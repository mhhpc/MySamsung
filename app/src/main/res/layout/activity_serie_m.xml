<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/serie_m"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context=".series.Serie_m">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleView"
                style="@style/Title"
                android:gravity="center"
                android:text="@string/serie_m_title" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ1"
                style="@style/CircleImage_series1"
                android:layout_below="@+id/titleView"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/tv1"
                style="@style/SeriesTextView2"
                android:layout_below="@+id/civ1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="@string/phones_m53" />

            <LinearLayout
                android:id="@+id/main"
                android:layout_below="@id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ2"
                    style="@style/CircleImage_series2"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ3"
                    style="@style/CircleImage_series2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/view"
                android:layout_below="@id/main"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv2"
                    style="@style/SeriesTextView3"
                    android:text="@string/phones_m62" />

                <TextView
                    android:id="@+id/tv3"
                    style="@style/SeriesTextView3"
                    android:text="@string/phones_m33" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv1"
                style="@style/SuggestCardView"
                android:layout_below="@+id/view"
                android:layout_marginHorizontal="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tx9"
                        style="@style/Suggesttv1"
                        android:layout_alignParentRight="true"
                        android:text="@string/title_suggest" />

                    <TextView
                        android:id="@+id/tx10"
                        style="@style/Suggesttv2"
                        android:layout_below="@+id/tx9"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/serie_m_s1" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>