<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ph_zflip3_compare"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    tools:context=".phones_detail.compare.galaxy_z.Ph_zflip3_compare">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/view"
                style="@style/RelativeView">

                <io.github.florent37.shapeofview.shapes.ArcView
                    android:id="@+id/v1"
                    style="@style/PhoneCompareArcview"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/iv1"
                        style="@style/PhoneFullIamge"
                        android:src="@drawable/ic_launcher_background" />


                </io.github.florent37.shapeofview.shapes.ArcView>

                <io.github.florent37.shapeofview.shapes.CircleView
                    android:id="@+id/circle"
                    style="@style/PhoneCompareCircleimage"
                    android:layout_below="@+id/v1"
                    android:layout_marginTop="-45dp"
                    android:layout_marginBottom="3dp">

                    <ImageView
                        android:id="@+id/iv2"
                        style="@style/PhoneFullIamge"
                        android:src="@drawable/phone" />

                </io.github.florent37.shapeofview.shapes.CircleView>

            </RelativeLayout>

            <TextView
                android:id="@+id/titleView1"
                style="@style/Title2"
                android:layout_below="@+id/view"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/corner_compare1"
                android:text="@string/phones_compare_title" />

            <TextView
                android:id="@+id/titleView2"
                style="@style/Title2"
                android:layout_below="@id/titleView1"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/corner_compare2"
                android:text="@string/phones_zflip3" />

            <LinearLayout
                android:id="@+id/ll1"
                style="@style/TipsLinearLayout"
                android:layout_below="@+id/titleView2"
                android:layout_marginTop="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ncv1"
                    style="@style/TipsCardView2"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/image1"
                        style="@style/TipsImageView" />

                    <TextView
                        style="@style/TipsTextView"
                        android:text="@string/phones_compare_more_samsung" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2"
                style="@style/TipsLinearLayout"
                android:layout_below="@+id/ll1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ncv2"
                    style="@style/TipsCardView2"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/image2"
                        style="@style/TipsImageView" />

                    <TextView
                        style="@style/TipsTextView"
                        android:text="@string/phones_compare_more_zoomit" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll3"
                style="@style/TipsLinearLayout"
                android:layout_below="@+id/ll2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ncv3"
                    style="@style/TipsCardView2"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/image3"
                        style="@style/TipsImageView" />

                    <TextView
                        style="@style/TipsTextView"
                        android:text="@string/phones_compare_more_gsm" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>