<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    tools:context=".views.About_activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="-180dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:visibility="invisible"
                app:lottie_rawRes="@raw/icon2" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/logo"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tx1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/corner_text"
                android:padding="10dp"
                android:text="@string/app_name_persian"
                android:textColor="@color/colorBlack"
                android:textSize="30sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tx2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/corner_blue"
                android:padding="7dp"
                android:text="@string/app_version"
                android:textColor="@color/ColorWhite"
                android:textSize="25sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/bt1"
                style="@style/MyButton"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="25dp"
                android:drawableLeft="@drawable/ertebat"
                android:text="@string/about_b1" />

            <Button
                android:id="@+id/bt2"
                style="@style/MyButton"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/rate"
                android:text="@string/about_b2" />

            <Button
                android:id="@+id/bt3"
                style="@style/MyButton"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/share"
                android:text="@string/about_b3" />

            <TextView
                android:id="@+id/tx3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/corner_text"
                android:padding="7dp"
                android:text="@string/about_tx1"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tx4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_text"
                android:padding="7dp"
                android:text="@string/about_tx2"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tx5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/corner_text"
                android:padding="7dp"
                android:text="@string/about_tx3"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:visibility="invisible" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>