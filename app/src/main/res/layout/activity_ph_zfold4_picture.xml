<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ph_zfold4_picture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    tools:context=".phones_detail.pictures.Ph_zfold4_picture">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="invisible">

                <io.github.florent37.shapeofview.shapes.DiagonalView
                    android:id="@+id/v1"
                    style="@style/PhonePictureArcview"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/iv1"
                        style="@style/PhoneFullIamge"
                        android:elevation="4dp"
                        android:src="@drawable/ic_launcher_background" />


                </io.github.florent37.shapeofview.shapes.DiagonalView>

                <io.github.florent37.shapeofview.shapes.CircleView
                    android:id="@+id/circle"
                    style="@style/PhoneCheckCircleimage"
                    android:layout_below="@+id/v1"
                    android:layout_marginTop="-60dp"
                    android:layout_marginBottom="3dp">

                    <ImageView
                        android:id="@+id/iv2"
                        style="@style/PhoneFullIamge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/phone" />

                </io.github.florent37.shapeofview.shapes.CircleView>

            </RelativeLayout>

            <TextView
                android:id="@+id/titleView1"
                style="@style/Title2"
                android:layout_below="@+id/view"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/corner_picture1"
                android:text="@string/phones_picture_title" />

            <TextView
                android:id="@+id/titleView2"
                style="@style/Title2"
                android:layout_below="@id/titleView1"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/corner_picture2"
                android:text="@string/phones_zfold4" />

            <io.github.florent37.shapeofview.shapes.RoundRectView
                android:id="@+id/imv1"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleView2"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="20dp"
                android:elevation="4dp"
                app:shape_roundRect_bottomLeftRadius="10dp"
                app:shape_roundRect_bottomRightRadius="10dp"
                app:shape_roundRect_topLeftRadius="10dp"
                app:shape_roundRect_topRightRadius="10dp">


                <ImageView
                    android:id="@+id/im1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:visibility="visible"
                    app:srcCompat="@drawable/loading" />

            </io.github.florent37.shapeofview.shapes.RoundRectView>

            <io.github.florent37.shapeofview.shapes.RoundRectView
                android:id="@+id/imv2"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imv1"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="20dp"
                android:elevation="4dp"
                app:shape_roundRect_bottomLeftRadius="10dp"
                app:shape_roundRect_bottomRightRadius="10dp"
                app:shape_roundRect_topLeftRadius="10dp"
                app:shape_roundRect_topRightRadius="10dp">


                <ImageView
                    android:id="@+id/im2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:visibility="visible"
                    app:srcCompat="@drawable/loading" />

            </io.github.florent37.shapeofview.shapes.RoundRectView>

            <io.github.florent37.shapeofview.shapes.RoundRectView
                android:id="@+id/imv3"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imv2"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="20dp"
                android:elevation="4dp"
                app:shape_roundRect_bottomLeftRadius="10dp"
                app:shape_roundRect_bottomRightRadius="10dp"
                app:shape_roundRect_topLeftRadius="10dp"
                app:shape_roundRect_topRightRadius="10dp">


                <ImageView
                    android:id="@+id/im3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:visibility="visible"
                    app:srcCompat="@drawable/loading" />

            </io.github.florent37.shapeofview.shapes.RoundRectView>

            <io.github.florent37.shapeofview.shapes.RoundRectView
                android:id="@+id/imv4"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imv3"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="20dp"
                android:elevation="4dp"
                app:shape_roundRect_bottomLeftRadius="10dp"
                app:shape_roundRect_bottomRightRadius="10dp"
                app:shape_roundRect_topLeftRadius="10dp"
                app:shape_roundRect_topRightRadius="10dp">


                <ImageView
                    android:id="@+id/im4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:visibility="visible"
                    app:srcCompat="@drawable/loading" />

            </io.github.florent37.shapeofview.shapes.RoundRectView>

            <io.github.florent37.shapeofview.shapes.RoundRectView
                android:id="@+id/imv5"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imv4"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="20dp"
                android:elevation="4dp"
                app:shape_roundRect_bottomLeftRadius="10dp"
                app:shape_roundRect_bottomRightRadius="10dp"
                app:shape_roundRect_topLeftRadius="10dp"
                app:shape_roundRect_topRightRadius="10dp">


                <ImageView
                    android:id="@+id/im5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:visibility="visible"
                    app:srcCompat="@drawable/loading" />

            </io.github.florent37.shapeofview.shapes.RoundRectView>

            <TextView
                android:id="@+id/more"
                style="@style/PhoneTextView7"
                android:layout_below="@id/imv5"
                android:layout_marginTop="15dp"
                android:text="@string/phones_picture_more" />

            <LinearLayout
                android:id="@+id/ll1"
                style="@style/TipsLinearLayout"
                android:layout_below="@+id/more"
                android:layout_marginTop="0dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ncv1"
                    style="@style/TipsCardView"
                    android:layout_height="135dp"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/image1"
                        style="@style/TipsImageView" />

                    <TextView
                        style="@style/TipsTextView"
                        android:text="@string/phones_picture_more_zoomit" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2"
                style="@style/TipsLinearLayout"
                android:layout_below="@+id/ll1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ncv2"
                    style="@style/TipsCardView"
                    android:layout_height="135dp"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/image2"
                        style="@style/TipsImageView" />

                    <TextView
                        style="@style/TipsTextView"
                        android:text="@string/phones_picture_more_gsm" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>