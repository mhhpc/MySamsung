<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/year"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    android:layoutDirection="rtl"
    tools:context=".views.Year_activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/titleView"
                style="@style/Title"
                android:gravity="center"
                android:text="@string/year_title" />

            <Button
                android:id="@+id/b1"
                style="@style/MyButton2"
                android:layout_below="@+id/titleView"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="25dp"
                android:text="@string/year_2022" />

            <Button
                android:id="@+id/b2"
                style="@style/MyButton2"
                android:layout_below="@+id/b1"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:text="@string/year_2021" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv1"
                style="@style/SuggestCardView"
                android:layout_below="@+id/b2"
                android:layout_marginHorizontal="15dp"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tx1"
                        style="@style/Suggesttv1"
                        android:layout_alignParentRight="true"
                        android:text="@string/title_suggest" />

                    <TextView
                        android:id="@+id/tx2"
                        style="@style/Suggesttv2"
                        android:layout_below="@+id/tx1"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/year_s1" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>