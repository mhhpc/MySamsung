                    style="@style/TipsLinearLayout"
                    android:layout_marginTop="5dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv1"
                        style="@style/TipsCardViewGoodlock"
                        app:cardCornerRadius="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/iv1"
                                style="@style/GoodlockImageView"
                                android:layout_marginHorizontal="10dp" />

                            <TextView
                                android:id="@+id/tv1"
                                style="@style/GoodlockTextView"
                                android:text="@string/goodlock_tv1" />

                            <TextView
                                android:id="@+id/t1"
                                style="@style/GoodlockTextView2"
                                android:layout_below="@+id/tv1"
                                android:layout_toRightOf="@id/iv1"
                                android:text="@string/goodlock_t1" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

