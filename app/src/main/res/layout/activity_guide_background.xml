<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".guide.Guide_background">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ctr_bg">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            style="@style/AppbarTitle2">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                style="@style/CollapsingToolbarLayout2"
                app:title="@string/guide_background_title">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    style="@style/Toolbar" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/guide_background"
            style="@style/NestedScrollView">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv1"
                    style="@style/SimpleTextview"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/guide_background_t1" />

                <TextView
                    android:id="@+id/tv2"
                    style="@style/SimpleTextview"
                    android:layout_below="@id/tv1"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/guide_background_t2" />

                <ImageView
                    android:id="@+id/imv1"
                    style="@style/PhoneImageView2"
                    android:layout_below="@id/tv2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/tv3"
                    style="@style/SimpleTextview"
                    android:layout_below="@id/imv1"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/guide_background_t3" />

                <ImageView
                    android:id="@+id/imv2"
                    style="@style/PhoneImageView2"
                    android:layout_below="@id/tv3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/tv4"
                    style="@style/SimpleTextview"
                    android:layout_below="@id/imv2"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/guide_background_t4" />

                <ImageView
                    android:id="@+id/imv3"
                    style="@style/PhoneImageView2"
                    android:layout_below="@id/tv4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/tv5"
                    style="@style/SimpleTextview"
                    android:layout_below="@id/imv3"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/guide_background_t5" />

                <TextView
                    android:id="@+id/tv6"
                    style="@style/SimpleTextview"
                    android:layout_below="@id/tv5"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/guide_background_t6"
                    android:layout_marginBottom="10dp"/>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>